@model KBVault.Web.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html class="bg-black">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@UIResources.LoginFormPageTitle</title>

    @{ Html.RenderPartial("GoogleFonts"); }

    <link rel="stylesheet" href="@Url.Content("https://cdn.app.deka.local/lib/versioned/bootstrap/4.3.1/css/bootstrap.min.css")" />

</head>
<body style="height: 100vh; background: url(../../Assets/Themes/Default/img/bg.png) repeat; backdrop-filter: blur(5px);">
    <div class="container h-100">
        <div class="row align-items-center justify-content-center h-100">
            <div class="card shadow-sm" id="login-box">
                @using (Html.BeginForm())
                {
                    <div class="card-body">
                        <div class="form-group">
                            <input type="text" name="UserName" class="form-control" placeholder="@UIResources.LoginFormUserName" />
                        </div>
                        <div class="form-group">
                            <input type="password" name="Password" class="form-control" placeholder="@UIResources.LoginFormPassword" />
                        </div>
                        <div>
                            <input type="checkbox" value="true" name="RememberMe" /> @UIResources.LoginFormRememberMe
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="mb-2 btn btn-primary btn-block shadow">@UIResources.LoginFormSubmitButton</button>
                        <div align="center"><a href='@Url.Action("Index", "Home")'>East Penn KBVault Home</a></div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="@Url.Content("~/Assets/js/jquery/jquery-2-0-2.js")"></script>
    <script src="@Url.Content("~/Assets/js/jquery/jquery-ui-1-10-4.js")"></script>
    <script src="@Url.Content("https://cdn.app.deka.local/lib/versioned/bootstrap/4.3.1/js/bootstrap.min.js")"></script>

    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
